@model IQueryable<Best.Core.Domain.DbEntities.News>

@foreach (var item in Model)
{
    <a href="@Url.Action("NewsDetail", "News", new { category = item.Category.SeoName, id = item.Id, title = item.SeoTitle })">
        <div class="right-headline-item">
            <div class="col-xs-7 right-headline-title">
                @item.Title
            </div>
            <div class="col-xs-5 right-headline-image">
                <img src="~/@item.ProfileImgUrlSmall" alt="@item.Title" />
            </div>
        </div>
    </a>
}
