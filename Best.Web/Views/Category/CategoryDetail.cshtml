@foreach (var item in Model.News.OrderByDescending(x => x.Id))
{
    <div class="col-sm-4 featured-news" style="padding: 0 15px 0 0;">
        <a href="@Url.Action("NewsDetail", "News", new { category = item.Category.SeoName, id = item.Id, title = item.SeoTitle })">
            <div class="featured-news-item">
                <div class="col-xs-7 featured-news-title">
                    @item.Title
                </div>
                <div class="col-xs-5 featured-news-image">
                    <img src="~/@item.ProfileImgUrlSmall" alt="@item.Title" />
                </div>
            </div>
        </a>
    </div>
}

